    <icon class="iconfont iconshouye"></icon>
    <text>首页</text>
  </navigator>
  <navigator open-type="redirect" class="nav" url="/pages/{{navType}}/pages/classify/classify" class="{{navPath == 'classify' ? 'cur' : ''}}">
    <icon class="iconfont iconziyuan"></icon>
    <text>分类</text>
  </navigator>
  <navigator open-type="redirect" class="nav" url="/pages/Collect/Collect?type={{navType != 'Collect' ? navType : ''}}" class="{{navPath == 'Collect' ? 'cur' : ''}}" wx:if="{{isShow}}">
    <icon class="iconfont iconcollect"></icon>
    <text>收藏</text>
  </navigator>
  <navigator open-type="redirect" class="nav" url="/pages/Member/Member?type={{navType != 'Member' ? navType : ''}}" class="{{navPath == 'Member' ? 'cur' : ''}}">
    <icon class="iconfont iconme"></icon>
