<!--pages/Video/pages/detail/detail.wxml-->
<view class="videoDetailWrap">
  <view class="top">
    <view class="topLeft">
      <image src="{{data.vod_pic}}"></image>
    </view>
    <view class="topRight">
      <view class="videoName">{{data.vod_name}}</view>
      <view class="videoInfoUl">
        <view class="infoBox">
          <view class="videoInfoLi">
            <view class="listName">主演</view>
            <view class="listInfo">{{data.vod_actor}}</view>
          </view>
        </view>
        <view class="infoBox">
          <view class="videoInfoLi">
            <view class="listName">导演</view>
            <view class="listInfo">{{data.vod_director}}</view>
          </view>
        </view>
        <view class="infoBox">
          <view class="videoInfoLi col2">
            <view class="listName">类型</view>
            <view class="listInfo">{{data.type_name}}</view>
          </view>
          <view class="videoInfoLi col2">
            <view class="listName">地区</view>
            <view class="listInfo">{{data.vod_area}}</view>
          </view>
        </view>
        <view class="infoBox">
          <view class="videoInfoLi col2">
            <view class="listName">年份</view>
            <view class="listInfo">{{data.vod_year}}</view>
          </view>
          <view class="videoInfoLi col2">
            <view class="listName">语言</view>
            <view class="listInfo">{{data.vod_lang}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="conBox">
    <view class="conTabH">
      <text class="{{nTab == 0 ? 'cur' : ''}}" catchtap="setTab" data-index="0">播放列表</text>
      <text class="{{nTab == 1 ? 'cur' : ''}}" catchtap="setTab" data-index="1">内容简介</text>
    </view>
    <view class="conTabC">
      <view class="tabList tabList_0" wx:if="{{nTab == 0}}">
        <text wx:for="{{playList}}" data-index="{{index}}" data-name="{{item[0]}}" data-url="{{item[1]}}" data-title="{{data.vod_name}}" data-id="{{data.vod_id}}" wx:key="index" catchtap="toPlay">{{item[0]}}</text>
      </view>
      <view class="tabList tabList_1" wx:if="{{nTab == 1}}">{{data.vod_content}}</view>
    </view>
  </view>
</view>