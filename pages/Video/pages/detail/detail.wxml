<!--pages/Video/pages/detail/detail.wxml-->
<import src="../../../../wxParse/wxParse.wxml" />
<template is="wxParse" data="{{wxParseData:article.nodes}}" />
<view class="videoDetailWrap">
  <view class="top" wx:if="{{!isPlay}}">
    <view class="topLeft">
      <image src="{{data.img}}"></image>
      <icon class="iconfont iconshoucang" catchtap="collectBtn" wx:if="{{isCollect}}"></icon>
      <icon class="iconfont iconlujing" catchtap="notCollectBtn" wx:else></icon>
    </view>
    <view class="topRight">
      <view class="videoName">{{data.name}}</view>
      <view class="videoInfoUl">
        <view class="infoBox">
          <view class="videoInfoLi">
            <view class="listName">主演</view>
            <view class="listInfo">{{data.actor}}</view>
          </view>
        </view>
        <view class="infoBox">
          <view class="videoInfoLi">
            <view class="listName">导演</view>
            <view class="listInfo">{{data.director}}</view>
          </view>
        </view>
        <view class="infoBox">
          <view class="videoInfoLi col2">
            <view class="listName">类型</view>
            <view class="listInfo">{{data.type}}</view>
          </view>
          <view class="videoInfoLi col2">
            <view class="listName">地区</view>
            <view class="listInfo">{{data.area}}</view>
          </view>
        </view>
        <view class="infoBox">
          <view class="videoInfoLi col2">
            <view class="listName">年份</view>
            <view class="listInfo">{{data.year}}</view>
          </view>
          <view class="videoInfoLi col2">
            <view class="listName">语言</view>
            <view class="listInfo">{{data.lang}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="conBox">
    <view class="conTabH">
      <text class="{{nTab == 0 ? 'cur' : ''}}" catchtap="setTab" data-index="0">内容简介</text>
      <text class="{{nTab == 1 ? 'cur' : ''}}" catchtap="setTab" data-index="1" wx:if="{{isShow}}">播放列表</text>

    </view>
    <view class="conTabC">
      <view class="tabList tabList_1" wx:if="{{nTab == 0}}">{{data.content}}</view>
      <view class="tabList tabList_0" wx:if="{{nTab == 1}}">
        <picker bindchange="bindPickerChange" value="{{num}}" range="{{yList}}" class="pickerWrap"
          wx:if="{{isShowSource && yList.length>0}}">
          <view class="pickerMain">播放源：<view class="pickerValue">{{yList[num]}}<icon class="iconfont iconjiantou">
              </icon>
            </view>
          </view>
        </picker>
        <text wx:for="{{playList}}" data-index="{{index}}" data-name="{{item.name}}" data-url="{{item.url}}"
          data-title="{{data.name}}" data-id="{{data.id}}" wx:key="index" catchtap="toPlay"
          class="{{nIndex == index ? 'cur' : ''}}">{{item.name}}</text>
        <view style="width:100%; height:30rpx;clear: both;"></view>
      </view>

    </view>
  </view>
</view>