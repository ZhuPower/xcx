/* pages/Comics/pages/index/index.wxss */
.comicsIndexWrap {}

.comicsIndexWrap .banner {
  width: 100%;
  height: 475rpx;
  overflow: hidden;
  position: relative;
}

.comicsIndexWrap .banner swiper {
  width: 100%;
  height: 475rpx;
}

.comicsIndexWrap .banner image {
  width: 100%;
  height: 475rpx;
}


.slide-image {
  transform: scale(0.6, 0.6);
}

.slide-active {
  transform: scale(1, 1);
}

.comicsIndexWrap .searchMain {
  position: absolute;
  width: 100%;
  left: 0;
  top: 0;
  z-index: 9;
}
