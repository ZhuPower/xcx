/* pages/Music/pages/index/index.wxss */
.musicIndexWrap{
  padding-top: 194rpx;
}
.musicIndexWrap .banner image {
  width: 100%;
}

.slide-image {
  transform: scale(0.6, 0.6);
}

.slide-active {
  transform: scale(1, 1);
}

.musicIndexWrap .main {
  padding: 0px 30rpx;
}

.musicIndexWrap .main .title {
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1px solid #ccc;
}

.musicIndexWrap .main .musicListBox {
  overflow: hidden;
  padding-bottom: 88rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 10rpx;
  flex-direction: row;
}

.musicIndexWrap .main .musicList {
  width: 220rpx;
  position: relative;
  padding-bottom: 20rpx;
}

.musicIndexWrap .main .musicList .albumdBox {
  width: 100%;
  height: 220rpx;
  border-radius: 6rpx;
}

.musicIndexWrap .main .musicList .songInfo {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  overflow: hidden;
}

.musicIndexWrap .main .musicList .songInfo>view {
  width: 100%;
}

.musicIndexWrap .main .musicList .songInfo .songname {
  width: 100%;
  font-size: 28rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.musicIndexWrap .main .musicList .songInfo .singer {
  width: 100%;
  font-size: 24rpx;
  color: #60606d;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}