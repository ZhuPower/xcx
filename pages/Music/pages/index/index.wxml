<!--pages/Music/pages/index/index.wxml-->
<view class="musicIndexWrap">
  <view class="searchMain">
    <view class="searchBox">
      <icon class="icon-small" type="search" size="20"></icon>
      <input bindinput="bindKeyInput" value="{{searchKey}}" placeholder="请输入搜索关键字" />
      <text catchtap="goList">搜索</text>
    </view>
  </view>
  <view class="banner">
    <swiper indicator-dots="true" autoplay="true" interval="2000" duration="500" circular="true"
      indicator-active-color="#18be76">
      <block wx:for="{{banner}}" wx:key="index">
        <swiper-item>
          <image src="{{item}}" lazy-load="{{true}}" mode="widthFix"></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="main">
    <view class="musicListBox">
      <view class="musicList" wx:for="{{songList}}" wx:for-index="key" wx:for-item="value" wx:key="key" catchtap="goDetail" data-id="{{value.songmid}}">
        <image class="albumdBox" src="{{img}}{{value.albummid}}_1.jpg?max_age=2592000"></image>
        <view class="songInfo">
          <view>
            <view class="songname">{{value.songname}}</view>
            <view class="singer">
              <text wx:for="{{value.singer}}"  wx:key="index">{{item.name}}<block wx:if="{{index < value.singer.length-1}}">、</block></text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <NavBar navType="Music" navPath="index"></NavBar>
</view>