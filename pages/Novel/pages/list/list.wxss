.categoryTab{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #ccc;
}
.categoryTab view{
  display: block;
  width: 25%;
  text-align: center;
}
.categoryTab view text{
  display: inline-block;
  height: 88rpx;
}

.categoryTab view.cur{
  color: #ff0000;
}
.categoryTab view.cur text{
  border-bottom: 1px solid #ff0000;
}