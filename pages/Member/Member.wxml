<!--pages/Member/Member.wxml-->
<view class="navWrap">
	<view class="logoMain">
		<view class="logo" catchtap="copyTex">
			<image wx:if="{{userInfo.avatarUrl}}" src="{{userInfo.avatarUrl}}" mode="widthFix"></image>
			<image wx:else src="./images/logo.png"></image>
		</view>
		<view class="welcome">
			<text wx:if="{{userInfo.nickName}}">Hello，{{userInfo.nickName}}！</text>
			<text wx:else>Hello，小伙伴们！</text>
		</view>
		<view class="mainBox" wx:if="{{userInfo.avatarUrl}}">
			<view>
				<text>呢称</text>
				<text>{{userInfo.nickName}}</text>
			</view>
			<view>
				<text>性别</text>
				<text>{{userInfo.gender ? '男' : '女'}}</text>
			</view>
			<view>
				<text>国家</text>
				<text>{{userInfo.country}}</text>
			</view>
			<view>
				<text>省份</text>
				<text>{{userInfo.province}}</text>
			</view>
			<view>
				<text>城市</text>
				<text>{{userInfo.city}}</text>
			</view>
		</view>
	</view>
	<button wx:if="{{isUser}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" class="loginBtn">登录</button>
	<NavBar navType="{{navType}}" navPath="Member" wx:if="{{!isUser}}"></NavBar>
</view>